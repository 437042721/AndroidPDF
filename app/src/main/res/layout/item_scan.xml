<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/line_bottom"
    android:paddingTop="@dimen/padding_content"
    android:paddingBottom="@dimen/padding_content"
    android:orientation="horizontal">

    <ImageView
        style="@style/iv_title_padding_content"
        android:id="@+id/iv_type"
        android:src="@drawable/book"
         />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="科技局"
            android:id="@+id/tv_name"
            android:textSize="@dimen/size_3"
            android:textColor="@color/text_deep"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="1.67M"
            android:id="@+id/tv_size"
            android:textSize="@dimen/size_4"
            android:layout_marginTop="@dimen/padding_content"
            android:textColor="@color/text_tint"/>
    </LinearLayout>
</LinearLayout>